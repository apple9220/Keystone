// Desktop menu
// *********************

.main-content
  header
    nav
      .dekstop-hide
        button.menu-bar-home
        .logo-mb
          a(href='/')
            span: img(src='images/logo.png' style="width: 154px")
      .container
        .menu
          ul
            li.logo
              a(href='/'): img(src='/images/logo.png' style="width: 154px")
            each parent in navLinks
              li(class=(section == parent.key ? 'active' : '') + (parent.children == true ? 'dropdown div-hover' : null))
                if parent.children
                  a.dropdown-toggle(href=parent.href, data-toggle='dropdown', aria-expanded='false')
                    | #{parent.label}
                    i.fa.fa-chevron-down(aria-hidden='true', style='margin-left: 10px;')
                  ul.dropdown-menu.service-menu
                    each child in childLinks
                      if child.childKey === parent.key
                        each link in child.links
                          li: a(href=link.href)= link.label
                else
                  a(href=parent.href)= parent.label

        .shop-header
          ul
            li: select
              option USD
              option EUR
              option GBP
            li: a(href="/cart")
              i.fa.fa-shopping-cart
                div#count= itemCount
              
            li
              i.fa.fa-user
              a(href='/')
                span Login
